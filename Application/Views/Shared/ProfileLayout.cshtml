@{
    Layout = null; // Es un layout propio, no depende de _Layout.cshtml
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Perfil</title>
    <link rel="stylesheet" href="~/css/profile.css" />
</head>
<body>
    <div class="profile-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="user-info">
                <img src="~/images/default-user.png" alt="Foto" class="profile-photo" />
                <h3>@ViewBag.NombreUsuario</h3>
                <p>@ViewBag.TipoCuenta</p>
            </div>

            <nav>
                <ul>
                    <li><a asp-controller="Profile" asp-action="Index">My Products</a></li>
                    <li><a asp-controller="Profile" asp-action="Messages">Messages</a></li>
                    <li><a asp-controller="Profile" asp-action="Settings">Settings</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Contenido dinámico -->
        <main class="content">
            @RenderBody()
        </main>
    </div>
</body>
</html>
