@{
    ViewData["Title"] = "Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 0;
    }

    /* Ajuste del ancho del header*/
    header.full-width-header {
        width: 100vw; /* Asegura que el header ocupe todo el ancho del viewport */
        margin-left: calc(50% - 50vw); /* Truco para centrar y eliminar los márgenes */
    }

     .accordion-button {
        background-color: white !important;
        color: black !important;
        transition: background-color 0.5s, opacity 0.5s;
        font-size: 1.2rem;
    }

        .accordion-button:hover {
            background-color: white !important;
            color:black !important;
            opacity: 0.8;
        }

        .accordion-button.active {
            background-color: rgb(0, 168, 108) !important;
            color: black !important;
        }

    .accordion-body {
        font-size: 1.1rem;
    }




    .bg-black {
        position: relative;
        min-height: 300px;
        opacity: 0;
        transition: opacity 1s ease-out; /* Transición de opacidad */
    }

        .bg-black.visible {
            opacity: 1;
        }

</style>

<header class="py-5 position-relative full-width-header" style="background-image: url('@Url.Content("~/images/Artesano.png")'); background-size: cover; background-position: center; background-attachment: fixed; height: 60vh;">
