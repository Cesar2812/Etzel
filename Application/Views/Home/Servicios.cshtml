<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Cerrar todos los acordeones excepto el primero
        document.querySelectorAll(".accordion-collapse").forEach((el, index) => {
            if (index !== 0) {
                el.classList.remove("show");
            }
        });

        // Asegurar que solo se abre uno a la vez los acordones
        document.querySelectorAll(".accordion-button").forEach(button => {
            button.addEventListener("click", function () {
                let target = this.getAttribute("data-bs-target");
                document.querySelectorAll(".accordion-collapse").forEach(el => {
                    if ("#" + el.id !== target) {
                        el.classList.remove("show");
                    }
                });
            });
        });
    });


    // Cuando se cargue la página, se agrega la clase 'visible' para activar la transición
    window.addEventListener('DOMContentLoaded', (event) => {
        document.querySelector('.bg-black').classList.add('visible');
    });
</script>